html
	head
		link(href="./stylesheets/main.css", rel="stylesheet")
		link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css", rel="stylesheet")
		link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css", rel="stylesheet")
		script(src="https://code.jquery.com/jquery-2.1.4.min.js")
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js")
		
	body#body
		div#container.container-fluid
			nav#navbar.navbar.navbar-default.navbar-fixed-top.navbar-inverse
				div.navbar-header
					button(type='button', class="navbar-toggle collapsed" data-toggle="collapse", data-target="#bs-example-navbar-collapse-1", aria-expanded="false")
						span.sr-only Toggle Navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a(class="navbar-brand",id="white-text", href="https://gstayton.github.io") Nathan Thomas
					
				div#bs-example-navbar-collapse-1.collapse.navbar-collapse
					ul#right-nav.nav.navbar-nav.navbar-right
						li
							a(href="#home-section", id="white-text")
								i.fa.fa-home
								span  Home
						li
							a(href="#about-section", id="white-text")
								i.fa.fa-info-circle
								span  About
						li
							a(href="#portfolio-section", id="white-text")
								i.fa.fa-folder-open
								span  Portfolio
						li
							a(href="#contact-section", id="white-text")
								i.fa.fa-phone-square
								span  Contact

			div.main
				div#home-section.content
					a(name="home-section")
					div.row
						div#main-info.col-md-8.col-md-offset-2
							h1#business-title.text-center Nathan Thomas
							h3.text-center Tech is my middle name
							div#contact-bar.row.text-center
								div.col-md-4
									a(href="#").btn.btn-default.btn-lg
										i.fa.fa-github
										span Github
								div.col-md-4
									a(href="#").btn.btn-default.btn-lg
										i.fa.fa-linkedin
										span LinkedIn
								div.col-md-4
									a(href="#").btn.btn-default.btn-lg
										i.fa.fa-twitter
										span Twitter
					
				div#about-section.content
					a(name="about-section")
				
				div#portfolio-section.content
					a(name="portfolio-section")
					
				div#contact-section.content
					a(name="contact-section")
					
				
			div.footer
